<section class="container px-36 mx-auto my-12">
  <div class='flex items-center justify-center w-full min-h-[70vh] text-gray-900 my-12 px-4'>
      <div class='flex flex-col items-center w-full gap-8'>
          <h1 class='text-9xl md:text-16xl w-full select-none text-center font-black text-gray-400'>
              404
          </h1>
          <p class='text-3xl font-semibold text-center'>Page not found</p>
          <p class='text-2xl md:px-12 text-center'>
              Oops! The page you are looking for cannot be found. It may have been moved, deleted, or never existed. Please check the URL or navigate back to our homepage. If you continue to encounter this issue, feel free to contact our support team for assistance.
          </p>
          <div class='flex flex-row justify-between gap-8'>
              <%= link_to "Previous", :back, class: "flex items-center justify-center w-1/2 px-5 py-2 text-sm tracking-wide text-indigo rounded-lg shrink-0 sm:w-auto gap-x-2 border border-indigo-500 hover:bg-indigo-500 hover:text-white text-sm" %>
              <%= link_to "Home Page", root_path, class: "flex items-center justify-center w-1/2 px-5 py-2 text-sm tracking-wide text-white transition-colors duration-200 bg-green-700 rounded-lg shrink-0 sm:w-auto gap-x-2 hover:bg-green-600" %>
          </div>
      </div>
  </div>
</section>
