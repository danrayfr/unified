    <h1 class="font-bold text-5xl text-gray-900">Home</h1>
    <%  if user_signed_in?%>
      <p class="text-gray-700 text-2xl">
        Hello, <%= current_user.name %>
      </p>
    <% end %>

  </div>
  <div class="mt-5 text-right">
    <%#= link_to "New Product", new_product_path, class:"bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded mt-2" if user_signed_in? && current_user.admin? %>
  </div>
  <div class="flex flex-wrap -mx-1 lg:-mx-4 mt-2">

  </div>

  <% if current_user %>
    <div>
      <h2><%= current_user.email %></h2>
