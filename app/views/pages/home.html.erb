<div>
  <h1 class="font-bold text-4xl">Pages#home</h1>
  <p>Find me in app/views/pages/home.html.erb</p>
  <br />

<% if current_user %>
  <div>
    <h2><%= current_user.email %></h2>
    <% unless current_user.avatar_url.nil? %>
      <%= image_tag current_user.avatar_url %>
    <% else %>
      <%= image_tag 'https://static.thenounproject.com/png/5034901-200.png' %>
    <% end %>
    <h1><%= current_user.name %></h1>
    <h2><%= current_user.title %></h2>
    <p class='uppercase'><%= current_user.role %></p>
  </div>
  <br />
  <%= link_to 'Edit Account', edit_user_registration_path %>
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: 'false' } %>
<% else %>
  <%= link_to 'Login', new_user_session_path %>
  <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>

</div>