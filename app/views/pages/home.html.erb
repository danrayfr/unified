<div class="flex items-center justify-between pb-6 border-b">
  <h1 class="font-bold text-5xl text-gray-900">Home</h1>
  <%  if user_signed_in?%>
    <p class="text-gray-700 text-2xl">
      Hello, <%= current_user.name %>
    </p>
  <% end %>

</div>
<div class="mt-5 text-right">
  <%#= link_to "New Product", new_product_path, class:"bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded mt-2" if user_signed_in? && current_user.admin? %>
</div>
<div class="flex flex-wrap -mx-1 lg:-mx-4 mt-2">
  
</div>

<% if current_user %>
  <div>
    <h2><%= current_user.email %></h2>
    <% unless current_user.avatar_url.nil? %>
      <%= image_tag current_user.avatar_url %>
    <% else %>
      <%= image_tag 'https://static.thenounproject.com/png/5034901-200.png' %>
    <% end %>
    <h1><%= current_user.name %></h1>
    <h2><%= current_user.title %></h2>
    <p class='uppercase'><%= current_user.role %></p>
  </div>
  <br />
  <%= link_to 'Edit Account', edit_user_registration_path %>
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: 'false' } %>
<% else %>
  <%= link_to 'Login', new_user_session_path %>
  <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>

</div>