<% if object.errors.any? %>
  <div id="error_explanation" class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 space-x-3">
    <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 -mr-2v" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
    <span class="sr-only">Danger</span>
    <span class="font-bold text-md"><%= pluralize(object.errors.count, "error") %> prohibited this object from being saved:</span>
    <div>
      <ul class="mt-1.5 ml-4 list-disc list-inside">
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>