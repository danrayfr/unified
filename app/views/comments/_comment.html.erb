<div class="comment- <%= comment.id %>">
  <%= comment.user.name %>
  <%= comment.note&.content %>

  <span><%= time_ago_in_words(comment.created_at) %></span>

  <%= button_to 'Delete', [account, ticket, comment], method: :delete, class: 'text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900' if comment.user == current_user %>
</div>