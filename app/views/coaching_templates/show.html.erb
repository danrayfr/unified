<%= provide(:title, @coaching_template.name) %>

<div class="flex flex-col items-start justify-between pb-6 space-y-4 lg:items-center lg:space-y-0 lg:flex-row">
  <ol class="flex flex-wrap pt-1 mr-12 bg-transparent rounded-lg sm:mr-16">
    <li class="leading-normal text-sm">
      <a class="opacity-50 text-slate-700">Pages</a>
    </li>
    <li class="text-sm pl-2 capitalize leading-normal text-slate-700 before:float-left before:pr-2 before:text-gray-600 before:content-['/']" aria-current="page"><%= link_to "Coaching Templates", account_coaching_templates_path(@account) %></li>
    <li class="text-sm pl-2 capitalize leading-normal text-slate-700 before:float-left before:pr-2 before:text-gray-600 before:content-['/']" aria-current="page"><%= @coaching_template.name %></li>
  </ol>
</div>

<div class="container mx-auto">
  <p>
    <%= @coaching_template.name %>
  </p>

  <div>
    <% @coaching_template.customs.each do |custom| %>
      <p><%= custom['custom_name'] %>, <%= custom['content'] %> </p>
    <% end %>
  </div>

  <p>
    <%= @coaching_template.note&.content %>
  </p>
  
</div>