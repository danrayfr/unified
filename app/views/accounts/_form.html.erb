<%= form_with(model: account, class: "bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
  <div class="px-4 py-6 sm:p-8">
    <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-8">
      
      <div class="col-span-full">
        <%= form.label :name, class: "block text-sm font-medium leading-6 text-gray-700" %>
        <div class="mt-2">
          <%= form.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div class='col-span-full'>
        <%= form.label :site, class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= form.select :site, Account.sites.keys.map { |site| [site.humanize, site]}, { prompt: "Select a site" }, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
      </div>

      <% if action_name == 'edit' %>
        <div class="col-span-full">
          <%= form.label :slug, "URL", class: "block mb-2 text-sm font-medium text-gray-900" %>
          <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
              <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm"><%= base_url %></span>
              <%= form.text_field :slug, class: "block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>


    <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8 mt-4">
    <% if action_name == 'edit' %>
      <%= link_to "Back", :back, class: "text-sm font-semibold leading-6 text-gray-900 hover:text-gray-500" %>
    <% else %>
      <%= link_to "Cancel", accounts_path, class: "text-sm font-semibold leading-6 text-gray-900 hover:text-gray-500" %>
    <% end %>
    

    <%= form.submit "Create account", class: "flex items-center justify-center w-1/2 px-5 py-2 text-sm tracking-wide text-white transition-colors duration-200 bg-green-700 rounded-lg shrink-0 sm:w-auto gap-x-2 hover:bg-green-600", onclick: "return confirm('Are you sure you want to save?');" %> 
  </div>
<% end %>
